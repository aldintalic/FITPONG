@model List<TabelaStavkaVM>
@{
    Layout = null;
    var brojac = 1;
}

@if (Model.Count == 0)
{
    <h2>Trenutno nije inicirano takmicenje ili je neki drugi problem u pitanju</h2>
}
else
{
    <table class="table table-hover">
        <tr>
            <td>Pozicija</td>
            <td>Naziv</td>
            <td>Pobjeda</td>
            <td>Poraza</td>
            <td>Ukupno</td>
        </tr>
        @foreach (TabelaStavkaVM i in Model)
        {
            <tr>
                <td>@(brojac++).</td>
                <td>@i.Naziv</td>
                <td>@i.Pobjeda</td>
                <td>@i.Poraza</td>
                <td>@i.UkupnoOdigrano</td>
            </tr>
        }
    </table>
}