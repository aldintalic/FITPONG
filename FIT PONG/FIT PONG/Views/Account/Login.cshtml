@model LoginVM
@{
    ViewData["Title"] = "Login";
}
    <style>
        h1{
            text-align:center;
        }
        #batn{
            margin-top:40px;
        }
        #checkboks{
            height:17px;
            width:17px;
            margin-left:10px;
        }
        #rememberMe{
            margin-top:20px;
        }
        #forma{
           
            padding-bottom:20px;
        }
    </style>
<h1>Login</h1>


<div class="row justify-content-center">
    <div id="forma" class="col-md-6">
        <form asp-action="Login" asp-controller="Account" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserName"></label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div id="rememberMe" class="form-group text-center">
                <label asp-for="RememberMe"></label>
                <input id="checkboks" asp-for="RememberMe" />
                <span asp-validation-for="RememberMe" class="text-danger"></span>
            </div>
            <div id="batn" class="text-center"><input type="submit" class="btn btn-info" value="Login" /></div>
        </form>
    </div>
  
</div>
<div class="row justify-content-center">
    <div class="col-6 justify-content-center text-center">
        <br />
        <a asp-action="PromjenaRequest" asp-controller="Account">Zaboravili rokenrol i otišli u šoping mol?</a>
        <br />
        <a asp-action="PosaljiKonfirmacijskiMejlPonovo" asp-controller="Account">Niste primili konfirmacijski mejl?</a>
    </div>
</div>
