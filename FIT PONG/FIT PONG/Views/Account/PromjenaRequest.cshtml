@model ResetPasswordEmailVM
@{
    ViewData["Title"] = "PromjenaRequest";
    var poruka = (string)ViewBag.poruka;
    var akcija = (string)ViewBag.akcija;
}
    <style>
        #sabmit{
            width:100px;
        }
    </style>
<h2>@poruka</h2>

<div class="row">
    <div class="col-6">
        <form asp-action="@akcija" asp-controller="Account" method="post">
            <div asp-validation-summary="All" class="text text-danger"></div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input class="form-control" asp-for="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <input id="sabmit" class="btn btn-info" type="submit" value="Pošalji" />
        </form>
    </div>
</div>