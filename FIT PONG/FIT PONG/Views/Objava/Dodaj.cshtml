@model FIT_PONG.ViewModels.ObjavaVMS.ObjavaUnosVM

@{
    ViewData["Title"] = "Dodaj";
}

<h1 class="text-center">Dodaj objavu</h1>


<div class="row justify-content-center">
    <div class="col-6">
        <form ajax-poziv="da" ajax-rezultat="Feed" action="/Objava/Dodaj">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FeedID" value="@Model.FeedID" />
            <div class="form-group">
                <label asp-for="Naziv" class="control-label"></label>
                <input asp-for="Naziv" class="form-control" />
                <span asp-validation-for="Naziv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <textarea rows="5" class="form-control" asp-for="Content"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <input type="submit" value="Dodaj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

